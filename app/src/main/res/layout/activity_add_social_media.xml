<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextNameToShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="Name to Show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextMediaLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="URL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNameToShow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Social Media"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMediaLink" />

    <ImageView
        android:id="@+id/imageViewFacebook"
        android:layout_width="67dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewTwitter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewLinkedin"
        app:srcCompat="@drawable/ic_facebook" />

    <ImageView
        android:id="@+id/imageViewTwitter"
        android:layout_width="67dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewLinkedin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewFacebook"
        app:layout_constraintTop_toTopOf="@+id/imageViewLinkedin"
        app:srcCompat="@drawable/ic_twitter" />

    <ImageView
        android:id="@+id/imageViewInstagram"
        android:layout_width="67dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewTumblr"
        app:layout_constraintTop_toTopOf="@+id/imageViewLinkedin"
        app:srcCompat="@drawable/ic_instagram" />

    <ImageView
        android:id="@+id/imageViewTumblr"
        android:layout_width="67dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewInstagram"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewLinkedin"
        app:layout_constraintTop_toTopOf="@+id/imageViewLinkedin"
        app:srcCompat="@drawable/ic_tumblr" />

    <ImageView
        android:id="@+id/imageViewLinkedin"
        android:layout_width="67dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewTumblr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewTwitter"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_linkedin" />

</android.support.constraint.ConstraintLayout>